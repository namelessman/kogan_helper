{
  "manifest_version": 3,
  "name": "Kogan helper",
  "version": "1.0.0",
  "description": "Fetches and displays Kogan Mobile usage summary.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://accounts.koganmobile.co.nz/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}